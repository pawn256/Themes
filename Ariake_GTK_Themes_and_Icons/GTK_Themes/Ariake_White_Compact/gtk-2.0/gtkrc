# Based on Bridge by ScionicSpectre and Adwaita by GNOME
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK 2 version of Ariake_White_Compact. It's whole purpose is to look as the
# GTK 3 version as much as possible until GTK 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "base_color:#f5faff"
gtk-color-scheme = "text_color:#0a0d17"
# Foreground/background
gtk-color-scheme = "bg_color:#f5faff"
gtk-color-scheme = "fg_color:#0a0d17"
# Selected foreground/background
gtk-color-scheme = "selected_bg_color:#5274ff"
gtk-color-scheme = "selected_fg_color:#f5faff"
# Titlebar foreground/background
gtk-color-scheme = "titlebar_bg_color:#0a0d17"
gtk-color-scheme = "titlebar_fg_color:#f5faff"
# Menus
gtk-color-scheme = "menu_color:#f5faff"
# Tooltips foreground/background
gtk-color-scheme = "tooltip_bg_color:#616161"
gtk-color-scheme = "tooltip_fg_color:#f5faff"
# Links
gtk-color-scheme = "link_color:#5274ff"
gtk-color-scheme = "visited_link_color:#9c27b0"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
